@model List<Product.Models.Entity.ProductStructure>
@{ ViewBag.Title = "Index"; }

<h2>Index</h2>
<a href="/product/create" class="btn btn-primary">Add Product</a>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Description</th>
    </tr>
    @foreach (var s in Model)
    {
<tr>
    <td>@s.Id</td>
    <td>@s.Name</td>
    <td>@s.Price</td>
    <td>@s.Quantity</td>
    <td>@s.Description</td>
</tr>}
</table>

